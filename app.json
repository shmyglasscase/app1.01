{
  "expo": {
    "name": "MyGlassCase",
    "slug": "myglasscase",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "myglasscase",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.myglasscase.app",
      "buildNumber": "1",
      "infoPlist": {
        "NSCameraUsageDescription": "MyGlassCase needs access to your camera to take photos of your collectibles.",
        "NSPhotoLibraryUsageDescription": "MyGlassCase needs access to your photo library to select images of your collectibles.",
        "NSPhotoLibraryAddUsageDescription": "MyGlassCase needs permission to save photos to your library."
      }
    },
    "android": {
      "package": "com.myglasscase.app",
      "versionCode": 1,
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.RECORD_AUDIO"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "single",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-font",
      "expo-web-browser",
      [
        "expo-camera",
        {
          "cameraPermission": "Allow MyGlassCase to access your camera to photograph collectibles."
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow MyGlassCase to access your photos to select images of collectibles."
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/images/notification-icon.png",
          "color": "#38a169",
          "sounds": []
        }
      ],
      "expo-in-app-purchases"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "eas": {
        "projectId": "myglasscase-app"
      }
    }
  }
}
